@{
    ViewData["Title"] = "Kayıt Ol";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
</head>

<body onload="toggleIlgiAlani()">

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h3><i class="fas fa-user-plus"></i> Kayıt Ol</h3>
                    </div>
                    <div class="card-body">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        <form asp-action="KayitOl" method="post" id="kayitForm">
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="AdSoyad">Ad Soyad</label>
                                <input type="text" class="form-control" id="AdSoyad" name="AdSoyad"
                                    placeholder="Ad Soyad" required>
                            </div>

                            <div class="form-group">
                                <label for="Email">E-Posta</label>
                                <input type="email" class="form-control" id="Email" name="Email" placeholder="E-Posta"
                                    required>
                            </div>

                            <div class="form-group">
                                <label for="Rol">Rol Seçiniz</label>
                                <select class="form-control" id="Rol" name="Rol" required onchange="toggleIlgiAlani()">
                                    <option value="Yazar">Yazar</option>
                                    <option value="Editor">Editör</option>
                                    <option value="Hakem">Hakem</option>
                                </select>
                            </div>

                            <div class="form-group" id="ilgiAlaniDiv" style="display: none;">
                                <label for="IlgiAlani" class="form-label">İlgi Alanı:</label>
                                <select class="form-control" id="IlgiAlani" name="IlgiAlani" required>
                                    <option value="">Lütfen bir konu seçin</option>
                                    <option value="Derin öğrenme">Derin öğrenme</option>
                                    <option value="Doğal dil işleme">Doğal dil işleme</option>
                                    <option value="Bilgisayarla görü">Bilgisayarla görü</option>
                                    <option value="Generatif yapay zeka">Generatif yapay zeka</option>
                                    <option value="Beyin-bilgisayar arayüzleri (BCI)">Beyin-bilgisayar arayüzleri (BCI)
                                    </option>
                                    <option value="Kullanıcı deneyimi tasarımı">Kullanıcı deneyimi tasarımı</option>
                                    <option value="Artırılmış ve sanal gerçeklik (AR/VR)">Artırılmış ve sanal gerçeklik
                                        (AR/VR)</option>
                                    <option value="Veri madenciliği">Veri madenciliği</option>
                                    <option value="Veri görselleştirme">Veri görselleştirme</option>
                                    <option value="Veri işleme sistemleri (Hadoop, Spark)">Veri işleme sistemleri
                                        (Hadoop, Spark)</option>
                                    <option value="Zaman serisi analizi">Zaman serisi analizi</option>
                                    <option value="Şifreleme algoritmaları">Şifreleme algoritmaları</option>
                                    <option value="Güvenli yazılım geliştirme">Güvenli yazılım geliştirme</option>
                                    <option value="Ağ güvenliği">Ağ güvenliği</option>
                                    <option value="Kimlik doğrulama sistemleri">Kimlik doğrulama sistemleri</option>
                                    <option value="Adli bilişim">Adli bilişim</option>
                                    <option value="5G ve yeni nesil ağlar">5G ve yeni nesil ağlar</option>
                                    <option value="Bulut bilişim">Bulut bilişim</option>
                                    <option value="Blockchain teknolojisi">Blockchain teknolojisi</option>
                                    <option value="P2P ve merkeziyetsiz sistemler">P2P ve merkeziyetsiz sistemler
                                    </option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-success btn-block">Kayıt Ol</button>
                        </form>

                        <div class="text-center mt-3">
                            <p>Hesabınız var mı? <a href="girisyap">Giriş Yapın</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleIlgiAlani() {
            var rol = document.getElementById("Rol").value;
            var ilgiAlaniDiv = document.getElementById("ilgiAlaniDiv");
            var ilgiAlaniInput = document.getElementById("IlgiAlani");

            if (rol === "Hakem") {
                ilgiAlaniDiv.style.display = "block";
                ilgiAlaniInput.setAttribute("required", "required");
            } else {
                ilgiAlaniDiv.style.display = "none";
                ilgiAlaniInput.removeAttribute("required");
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

@model List<LogKayit>
@{
    ViewData["Title"] = "Sistem Logları";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
            <h3><i class="fas fa-history"></i> Sistem Logları</h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tarih</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@log.Islem</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-muted">Henüz log kaydı bulunmamaktadır.</p>
            }
        </div>
    </div>
</div>
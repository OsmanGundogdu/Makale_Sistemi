@{
    ViewData["Title"] = "Makale Takip";
}

<h2>Makale Takip Sistemi</h2>

<form method="post" asp-action="MakaleDurumuSorgula">
    <label>Makale Takip NumarasÄ±:</label>
    <input type="text" name="takipNo" required class="form-control" />

    <label>E-posta Adresi:</label>
    <input type="email" name="email" required class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Sorgula</button>

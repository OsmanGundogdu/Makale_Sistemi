@{
    ViewData["Title"] = "Makale Yükleme";
}

<h2>Makale Yükle</h2>

<form method="post" enctype="multipart/form-data">
    <label>E-posta:</label>
    <input type="email" name="email" required class="form-control" />

    <label>Makale PDF:</label>
    <input type="file" name="makale" accept=".pdf" required class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Yükle</button>
</form>

@{
    ViewData["Title"] = "Makale Yükleme";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewData["Title"] as string ?? "Makale Yükleme")</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

    <style>
        .form-container {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-block {
            background-color: #28a745;
            color: white;
            font-size: 16px;
        }

        .btn-block:hover {
            background-color: #218838;
        }

        .card-header {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center">
                        <h3><i class="fas fa-upload"></i> Makale Yükle</h3>
                    </div>
                    <div class="card-body">
                        @if (TempData["BasariMesaji"] != null)
                        {
                            <div class="alert alert-success text-center">@TempData["BasariMesaji"]</div>
                        }
                        @if (TempData["Mesaj"] != null)
                        {
                            <div class="alert alert-warning text-center">@TempData["Mesaj"]</div>
                        }
                        <form asp-action="MakaleSistemi" method="post" enctype="multipart/form-data"
                            class="form-container">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="Email">E-Posta</label>
                                <input type="email" class="form-control" id="Email" name="YazarEmail" required
                                    placeholder="E-Posta adresinizi girin">
                            </div>

                            <div class="form-group">
                                <label for="Baslik">Başlık</label>
                                <input type="text" class="form-control" id="Baslik" name="Baslik" required
                                    placeholder="Makale başlığını girin">
                            </div>

                            <div class="form-group">
                                <label for="Makale">Makale PDF</label>
                                <input type="file" class="form-control-file" id="Makale" name="makale" accept=".pdf"
                                    required>
                            </div>

                            <div class="form-group">
                                <label for="Konu">Makale Konusu:</label>
                                <select class="form-control" id="Konu" name="Konu" required>
                                    <option value="">Lütfen bir konu seçin</option>
                                    <option value="Derin öğrenme">Derin öğrenme</option>
                                    <option value="Doğal dil işleme">Doğal dil işleme</option>
                                    <option value="Bilgisayarla görü">Bilgisayarla görü</option>
                                    <option value="Generatif yapay zeka">Generatif yapay zeka</option>
                                    <option value="Beyin-bilgisayar arayüzleri (BCI)">Beyin-bilgisayar arayüzleri (BCI)
                                    </option>
                                    <option value="Kullanıcı deneyimi tasarımı">Kullanıcı deneyimi tasarımı</option>
                                    <option value="Artırılmış ve sanal gerçeklik (AR/VR)">Artırılmış ve sanal gerçeklik
                                        (AR/VR)</option>
                                    <option value="Veri madenciliği">Veri madenciliği</option>
                                    <option value="Veri görselleştirme">Veri görselleştirme</option>
                                    <option value="Veri işleme sistemleri (Hadoop, Spark)">Veri işleme sistemleri
                                        (Hadoop, Spark)</option>
                                    <option value="Zaman serisi analizi">Zaman serisi analizi</option>
                                    <option value="Şifreleme algoritmaları">Şifreleme algoritmaları</option>
                                    <option value="Güvenli yazılım geliştirme">Güvenli yazılım geliştirme</option>
                                    <option value="Ağ güvenliği">Ağ güvenliği</option>
                                    <option value="Kimlik doğrulama sistemleri">Kimlik doğrulama sistemleri</option>
                                    <option value="Adli bilişim">Adli bilişim</option>
                                    <option value="5G ve yeni nesil ağlar">5G ve yeni nesil ağlar</option>
                                    <option value="Bulut bilişim">Bulut bilişim</option>
                                    <option value="Blockchain teknolojisi">Blockchain teknolojisi</option>
                                    <option value="P2P ve merkeziyetsiz sistemler">P2P ve merkeziyetsiz sistemler
                                    </option>
                                </select>
                            </div>


                            <button type="submit" class="btn btn-success btn-block mt-3">Makale Yükle <i
                                    class="fas fa-arrow-up"></i></button>
                        </form>

                        <div class="text-center mt-3" style="color: grey;">
                            <p>Makale yüklerken herhangi bir sorun yaşarsanız, lütfen destek ile iletişime geçin.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>

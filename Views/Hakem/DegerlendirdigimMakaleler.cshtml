@model List<dynamic>

@{
    ViewData["Title"] = "Atanmış Makalelerim";
}

<h2 class="text-center mt-4">Değerlendirdiğim Makaleler</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center mt-3">Henüz değerlendirme yapmadınız.</div>
}
else
{
    <table class="table table-striped mt-4">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Başlık</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var makale in Model)
            {
                <tr>
                    <td>@makale.Id</td>
                    <td>@makale.Baslik</td>
                    <td>
                        <span
                            class="badge @(makale.Durum == "Kabul" ? "bg-success" : makale.Durum == "Revizyon İstendi" ? "bg-warning" : "bg-danger")">
                            @makale.Durum
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

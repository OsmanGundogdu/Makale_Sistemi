@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<div class="d-flex justify-content-center align-items-center vh-100 text-center">
    <div>
        <i class="bi bi-journal-text display-1 text-primary"></i>
        @if (Context.Session.GetString("KullaniciRol") == "Editor")
        {
            <h1 class="mt-3 fw-bold">Makale Yönetme Sistemine Hoş Geldiniz Değerli Editörümüz</h1>
            <p class="text-muted">Kolay gelsin. İyi günler dileriz :)</p>
            <a asp-controller="Editor" asp-action="Index" class="btn btn-primary btn-lg">Makale Yönet</a>
        }
        else if (Context.Session.GetString("KullaniciRol") == "Hakem")
        {
            <h1 class="mt-3 fw-bold">Makale Değerlendirme Sistemine Hoş Geldiniz Değerli Hakemimiz</h1>
            <p class="text-muted">Kolay gelsin. İyi günler dileriz :)</p>
            <a asp-controller="Hakem" asp-action="Index" class="btn btn-primary btn-lg">Makale Değerlendir</a>
        }
        else
        {
            <h1 class="mt-3 fw-bold">Makale Yükleme Sistemine Hoş Geldiniz</h1>
            <p class="text-muted">Makale yüklemek ve yönetmek için giriş yapın veya kayıt olun. Ya da kayıt-giriş işlemleri
                ile uğraşmak istemiyorsanız direkt makale yükleyebilirsiniz :D</p>
            <a asp-controller="Makale" asp-action="MakaleSistemi" class="btn btn-primary btn-lg">Makale Yükle</a>
        }
    </div>
</div>

<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
